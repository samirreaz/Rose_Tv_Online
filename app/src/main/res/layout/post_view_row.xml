<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:id="@+id/blackShado"
            android:layout_height="100dp"
            android:background="@drawable/black_gradient"
            android:layout_alignParentBottom="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/blackShado"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Post Title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_postDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_postTitle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_postTitle"
            android:text="description"
            android:visibility="gone"
            android:textSize="20sp" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_mawlanaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:text="Post Title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#ffff"
            android:textSize="20sp" />
    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
</androidx.cardview.widget.CardView>